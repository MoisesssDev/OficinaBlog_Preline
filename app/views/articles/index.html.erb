<div class="max-w-7xl px-4 lg:px-6 lg:px-8 py-12 lg:py-24 mx-auto">
  <div class="mb-6 sm:mb-10 max-w-2xl text-center mx-auto">
    <h1 class="font-medium text-black text-2xl sm:text-4xl dark:text-white">
      All Articles
    </h1>
    <p class="max-w-lg mx-auto mt-4 text-gray-500">
        Explore unique workshops and experiences that spark your creativity and connect you to new possibilities. 
    </p>
  </div>

  <div class="mb-16 flex justify-end">
    <%= link_to new_article_path, class: "py-2 px-3 inline-flex items-center gap-x-2 text-sm font-medium rounded-xl border border-transparent bg-lime-400 text-black hover:bg-lime-500 focus:outline-none focus:bg-lime-500 transition disabled:opacity-50 disabled:pointer-events-none" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-plus"><path d="M5 12h14"/><path d="M12 5v14"/></svg>
      Create your article
    <% end %>
  </div>

  <!-- Card Grid -->
  <div class=" grid grid-cols-2 gap-4 sm:gap-6 md:gap-8 lg:gap-12">
    <!-- Card -->
    <%= render @articles %>
    <!-- End Card -->
  </div>
  <!-- End Card Grid -->

</div>