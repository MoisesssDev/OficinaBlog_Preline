<div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
  <div class="mx-auto max-w-2xl">
    <div class="text-center">
      <h2 class="text-xl text-gray-800 font-bold sm:text-3xl dark:text-white">
        Create your article
      </h2>
    </div>

    <div class="mt-5 p-4 relative z-10 bg-white border rounded-xl sm:mt-10 md:p-10 dark:bg-neutral-900 dark:border-neutral-700">
      <%= form_with model: @article, local: true do |form| %>
        <div class="mb-4 sm:mb-8">
          <%= form.label :title, class: "block mb-2 text-sm font-medium dark:text-white" %>
          <%= form.text_field :title, class: "py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600" %>
        </div>

        <div class="mb-4 sm:mb-8">
          <%= form.label :article_image, class: "block mb-2 text-sm font-medium dark:text-white" %>
          <%= form.file_field :article_image %>
        </div>

        <div>
          <%= form.label :content, class: "block mb-2 text-sm font-medium dark:text-white" %>
          <div class="mt-1">
            <%= form.text_area :content, class: "py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600" %>
          </div>
        </div>

        <div class="mt-6 grid">
          <%= form.submit "Submit", class: "w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-medium rounded-lg border border-transparent bg-lime-600 text-white hover:bg-lime-700 focus:outline-none focus:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none" %>
        </div>
      <% end %>
    </div>
  </div>
</div>